{
	"compilerOptions": {
		"target": "ES6",
		"module": "esnext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "react-jsxdev",
		"types": ["react", "react-dom"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"preserveValueImports": true,
		"isolatedModules": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@rui/components/*": ["./components/*"],
			"@rui/hooks": ["./hooks"],
			"@rui/icons": ["./icons"],
			"@rui/style": ["./style"],
			"@rui/style/*": ["./style/*"],
			"@rui/utils": ["./utils"],
			"@rui/utils/*": ["./utils/*"]
		}
	},
	"include": ["src"]
}
