{
	"name": "@robin-ui/core",
	"version": "0.1.2",
	"author": "Robin Hong <robinh.jsx@gmail.com>",
	"description": "A simple React component library",
	"license": "MIT",
	"homepage": "https://github.com/robinh-jsx/robin-ui#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/robinh-jsx/robin-ui",
		"directory": "packages/core"
	},
	"keywords": [
		"react",
		"components",
		"library",
		"frontend",
		"accessibility",
		"front-end",
		"robin ui"
	],
	"main": "src/index.ts",
	"files": [
		"dist",
		"src"
	],
	"sideEffects": false,
	"scripts": {
		"clean": "rm -rf dist",
		"build": "pnpm clean && concurrently pnpm:build:*",
		"build:cjs": "tsc -p ./tsconfig.prod.json --outDir dist/cjs --module commonjs",
		"build:esm": "tsc -p ./tsconfig.prod.json --outDir dist/esm --module esnext"
	},
	"dependencies": {
		"@floating-ui/react-dom": "^0.7.1",
		"@robin-ui/hooks": "workspace:*",
		"@robin-ui/icons": "workspace:*",
		"@robin-ui/styles": "workspace:*",
		"@robin-ui/theme": "workspace:*",
		"@robin-ui/types": "workspace:*",
		"@robin-ui/utils": "workspace:*",
		"framer-motion": "^6.3.10",
		"react-number-format": "^4.9.3"
	},
	"peerDependencies": {
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"react": "^18",
		"react-dom": "^18"
	},
	"publishConfig": {
		"main": "dist/cjs/index.js",
		"module": "dist/esm/index.js",
		"types": "dist/types/index.d.ts"
	}
}
