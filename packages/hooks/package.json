{
  "name": "@robin-ui/hooks",
  "version": "0.3.0",
  "author": "Robin Hong <robinh.jsx@gmail.com>",
  "description": "A collection of handy React hooks",
  "license": "MIT",
  "homepage": "https://github.com/robinh-jsx/robin-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinh-jsx/robin-ui",
    "directory": "packages/hooks"
  },
  "keywords": [
    "react",
    "hooks",
    "library",
    "front-end",
    "robin ui"
  ],
  "main": "src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm build:bundle && pnpm build:types",
    "build:bundle": "rollup -c ../../rollup.config.ts --configPlugin rollup-plugin-esbuild",
    "build:types": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly"
  },
  "dependencies": {
    "@robin-ui/styles": "workspace:*",
    "@robin-ui/types": "workspace:*",
    "@robin-ui/utils": "workspace:*"
  },
  "peerDependencies": {
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@types/react": "^18",
    "react": "^18"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "publishConfig": {
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts"
  }
}
