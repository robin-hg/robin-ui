{
	"name": "@robin-ui/styles",
	"version": "0.1.1",
	"main": "src/index.ts",
	"files": [
		"dist",
		"src"
	],
	"sideEffects": false,
	"scripts": {
		"clean": "rm -rf dist",
		"build": "pnpm clean && concurrently pnpm:build:*",
		"build:cjs": "tsc -p ./tsconfig.prod.json --outDir dist/cjs --module commonjs",
		"build:esm": "tsc -p ./tsconfig.prod.json --outDir dist/esm --module esnext"
	},
	"dependencies": {
		"@robin-ui/theme": "workspace:*"
	},
	"peerDependencies": {
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"react": "^18"
	},
	"publishConfig": {
		"main": "dist/cjs/index.js",
		"module": "dist/esm/index.js",
		"types": "dist/types/index.d.ts"
	}
}
