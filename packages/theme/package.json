{
	"name": "@robin-ui/theme",
	"version": "0.1.2",
	"author": "Robin Hong <robinh.jsx@gmail.com>",
	"description": "Default theme configuration for Robin-UI",
	"license": "MIT",
	"homepage": "https://github.com/robinh-jsx/robin-ui#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/robinh-jsx/robin-ui",
		"directory": "packages/theme"
	},
	"keywords": [
		"react",
		"theme",
		"front-end",
		"robin ui"
	],
	"main": "src/index.ts",
	"files": [
		"dist",
		"src"
	],
	"sideEffects": false,
	"scripts": {
		"clean": "rm -rf dist",
		"build": "pnpm clean && concurrently pnpm:build:*",
		"build:cjs": "tsc -p ./tsconfig.prod.json --outDir dist/cjs --module commonjs",
		"build:esm": "tsc -p ./tsconfig.prod.json --outDir dist/esm --module esnext"
	},
	"dependencies": {
		"@ctrl/tinycolor": "^3.4.1",
		"@robin-ui/utils": "workspace:*"
	},
	"peerDependencies": {
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"react": "^18"
	},
	"publishConfig": {
		"main": "dist/cjs/index.js",
		"module": "dist/esm/index.js",
		"types": "dist/types/index.d.ts"
	}
}
