{
	"name": "robin-ui",
	"version": "0.1.0",
	"author": "Robin Hong",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "yarn workspaces foreach -vip run build",
		"build:storybook": "rm -rf demo && build-storybook -o demo",
		"dev": "start-storybook -p 5000 --ci",
		"lint": "eslint --ext .ts,.tsx packages && tsc -p tsconfig.json --noEmit",
		"release": "yarn workspaces foreach npm publish"
	},
	"devDependencies": {
		"@emotion/react": "^11.9.0",
		"@emotion/styled": "^11.8.1",
		"@mdx-js/react": "^2.1.1",
		"@storybook/addon-a11y": "^6.5.5",
		"@storybook/addon-actions": "^6.5.5",
		"@storybook/addon-controls": "^6.5.5",
		"@storybook/builder-vite": "^0.1.35",
		"@storybook/react": "^6.5.5",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.5",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"prettier": "^2.6.2",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"storybook-dark-mode": "^1.1.0",
		"typescript": "^4.7.2",
		"vite": "^2.9.9"
	},
	"packageManager": "yarn@3.2.0"
}
