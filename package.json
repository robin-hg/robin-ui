{
	"version": "1.0.0",
	"description": "A simple UI Library",
	"author": "Robin Hong",
	"license": "MIT",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "rm -rf dist && tsc -p ./tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
		"postbuild": "node ./scripts/postbuild.js && cp README.md dist",
		"build:storybook": "rm -rf demo && build-storybook -o demo",
		"start": "start-storybook -p 5000 --ci",
		"lint": "yarn lint:code && yarn lint:style",
		"lint:code": "eslint --ext .ts,.tsx src && tsc -p tsconfig.json --noEmit",
		"lint:style": "stylelint ./src/**/*.style.ts",
		"test": "jest",
		"prerelease": "npm i && yarn lint && yarn test && yarn build",
		"release": "npm publish ./dist",
		"release-local": "yarn build && cd ./dist && yalc push --replace"
	},
	"dependencies": {
		"@popperjs/core": "~2.11.4",
		"date-fns": "~2.28.0",
		"deepmerge": "~4.2.2",
		"react-number-format": "~4.9.1",
		"react-popper": "~2.2.5",
		"react-scrollbars-custom": "~4.0.27",
		"react-transition-group": "~4.4.2",
		"tinycolor2": "^1.4.2"
	},
	"peerDependencies": {
		"@emotion/react": "^11",
		"react": "^17",
		"react-dom": "^17"
	},
	"devDependencies": {
		"@emotion/react": "^11.8.2",
		"@emotion/styled": "^11.8.1",
		"@mdx-js/react": "^2.1.1",
		"@storybook/addon-a11y": "^6.4.19",
		"@storybook/api": "^6.4.19",
		"@storybook/core-common": "^6.4.19",
		"@storybook/react": "^6.4.19",
		"@stylelint/postcss-css-in-js": "^0.37.2",
		"@types/jest": "^27.4.1",
		"@types/react": "^17.0.43",
		"@types/react-dom": "^17.0.14",
		"@types/react-transition-group": "^4.4.4",
		"@types/tinycolor2": "^1.4.3",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"prettier": "^2.6.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"storybook-builder-vite": "^0.1.22",
		"storybook-dark-mode": "^1.0.9",
		"stylelint": "^14.6.1",
		"stylelint-config-recess-order": "^3.0.0",
		"stylelint-config-recommended": "^7.0.0",
		"stylelint-config-standard": "^25.0.0",
		"tsc-alias": "^1.6.5",
		"tsconfig-paths": "^3.14.1",
		"typescript": "^4.6.3",
		"vite": "^2.9.1",
		"vite-tsconfig-paths": "^3.4.1"
	},
	"packageManager": "yarn@3.2.0"
}
