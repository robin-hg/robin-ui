{
  "name": "robin-ui",
  "author": "Robin Hong",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinh-jsx/robin-ui"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "pnpm -r --parallel clean",
    "build": "pnpm -r --parallel build",
    "build:storybook": "build-storybook -o demo",
    "dev": "start-storybook -p 5000 --ci",
    "dev:docs": "pnpm run -C docs dev",
    "lint": "pnpm lint:eslint && pnpm lint:typecheck",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:typecheck": "tsc --noEmit --skipLibCheck",
    "test": "vitest packages",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fontsource/noto-sans": "^4.5.11",
    "@fontsource/noto-sans-mono": "^4.5.12",
    "@fontsource/noto-serif": "^4.5.11",
    "@mdx-js/react": "^2.1.5",
    "@robin-ui/test-utils": "workspace:*",
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-controls": "^6.5.13",
    "@storybook/builder-vite": "^0.2.5",
    "@storybook/client-api": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/theming": "^6.5.13",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vitejs/plugin-react": "^2.2.0",
    "esbuild": "^0.15.13",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^7.6.4",
    "husky": "^8.0.1",
    "jsdom": "^20.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.79.1",
    "rollup-plugin-esbuild": "^4.10.1",
    "rollup-plugin-node-externals": "^5.0.2",
    "storybook-dark-mode": "^1.1.2",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vitest": "^0.24.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^18",
        "react-dom": "^18"
      },
      "ignoreMissing": [
        "@babel/core",
        "@storybook/*",
        "require-from-string"
      ]
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "eslint"
  },
  "engines": {
    "node": ">=18.12.1"
  },
  "packageManager": "pnpm@7.14.2"
}
