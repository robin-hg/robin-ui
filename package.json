{
	"name": "robin-ui",
	"version": "0.1.0",
	"author": "Robin Hong",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "rm -rf dist && tsc -p ./tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
		"postbuild": "node ./scripts/postbuild.js && cp README.md dist",
		"build:storybook": "rm -rf demo && build-storybook -o demo",
		"start": "start-storybook -p 5000 --ci",
		"lint": "eslint --ext .ts,.tsx packages && tsc -p tsconfig.json --noEmit",
		"test": "jest",
		"prerelease": "npm i && yarn lint && yarn test && yarn build",
		"release": "npm publish ./dist",
		"release-local": "yarn build && cd ./dist && yalc push --replace"
	},
	"resolutions": {
		"@types/react": "^17",
		"webpack": "^5"
	},
	"devDependencies": {
		"@babel/core": "^7.17.9",
		"@emotion/react": "^11.9.0",
		"@emotion/styled": "^11.8.1",
		"@mdx-js/react": "^2.1.1",
		"@storybook/addon-a11y": "^6.4.22",
		"@storybook/addon-docs": "^6.4.22",
		"@storybook/addon-essentials": "^6.4.22",
		"@storybook/builder-webpack5": "^6.4.22",
		"@storybook/manager-webpack5": "^6.4.22",
		"@storybook/react": "^6.4.22",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"prettier": "^2.6.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"storybook-dark-mode": "^1.0.9",
		"typescript": "^4.6.3"
	},
	"packageManager": "yarn@3.2.0"
}
