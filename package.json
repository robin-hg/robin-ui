{
  "name": "robin-ui",
  "author": "Robin Hong",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinh-jsx/robin-ui"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "pnpm -r --parallel clean",
    "build": "pnpm --filter=!docs -r --parallel build",
    "build:storybook": "storybook build -o demo",
    "dev": "storybook dev -p 5000 --ci",
    "lint": "pnpm lint:eslint && pnpm lint:typecheck",
    "lint:eslint": "eslint . --ext .ts,.tsx --cache --ignore-pattern docs",
    "lint:typecheck": "tsc --noEmit",
    "test": "vitest packages",
    "release": "pnpm build && changeset publish",
    "changeset": "changeset",
    "docs:build": "pnpm run -C docs build",
    "docs:lint": "pnpm run -C docs lint",
    "docs:dev": "pnpm run -C docs dev"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fontsource/noto-sans": "^4.5.11",
    "@fontsource/noto-sans-mono": "^4.5.12",
    "@fontsource/noto-serif": "^4.5.11",
    "@mdx-js/react": "^2.2.1",
    "@robin-ui/test-utils": "workspace:*",
    "@storybook/addon-a11y": "7.0.0-beta.24",
    "@storybook/addon-controls": "7.0.0-beta.24",
    "@storybook/addon-storysource": "7.0.0-beta.24",
    "@storybook/client-api": "7.0.0-beta.24",
    "@storybook/react": "7.0.0-beta.24",
    "@storybook/react-vite": "7.0.0-beta.24",
    "@storybook/theming": "7.0.0-beta.24",
    "@testing-library/dom": "^8.19.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitejs/plugin-react": "^3.0.1",
    "esbuild": "^0.16.16",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^8.4.0",
    "husky": "^8.0.3",
    "jsdom": "^21.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.9.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-externals": "^5.1.0",
    "storybook": "7.0.0-beta.24",
    "storybook-dark-mode": "^2.0.5",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.27.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "eslint"
  },
  "engines": {
    "node": ">=18.12.1"
  },
  "packageManager": "pnpm@7.24.3"
}
