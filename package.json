		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"prettier": "^2.6.2",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"storybook-dark-mode": "^1.1.0",
		"typescript": "^4.7.3",
		"vite": "^2.9.9"
	},
	"engines": {
		"pnpm": "^7.0.0"
	},
	"packageManager": "pnpm@7.1.9"
}
