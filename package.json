{
  "name": "robin-ui",
  "author": "Robin Hong",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinh-jsx/robin-ui"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "pnpm -r --parallel clean",
    "build": "pnpm -r --parallel build",
    "build:storybook": "build-storybook -o demo",
    "dev": "start-storybook -p 5000 --ci",
    "lint": "pnpm lint:code && pnpm lint:types",
    "lint:code": "eslint ./packages/*/src/** --ext .ts,.tsx",
    "lint:types": "tsc --noEmit --skipLibCheck",
    "test": "vitest packages",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@fontsource/noto-sans": "^4.5.10",
    "@fontsource/noto-sans-mono": "^4.5.9",
    "@fontsource/noto-serif-display": "^4.5.11",
    "@mdx-js/react": "^2.1.2",
    "@robin-ui/test-utils": "workspace:*",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-controls": "^6.5.9",
    "@storybook/builder-vite": "^0.1.37",
    "@storybook/client-api": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@storybook/theming": "^6.5.9",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.3",
    "esbuild": "^0.14.47",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^6.3.15",
    "happy-dom": "^5.3.2",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.75.7",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-node-externals": "^4.0.0",
    "storybook-dark-mode": "^1.1.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "vitest": "^0.16.0"
  },
  "engines": {
    "pnpm": "^7.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^18",
        "react-dom": "^18"
      },
      "ignoreMissing": [
        "@babel/core",
        "@storybook/*",
        "require-from-string"
      ]
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "eslint"
  },
  "packageManager": "pnpm@7.3.0"
}
